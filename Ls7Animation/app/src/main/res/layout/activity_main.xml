<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:id="@+id/ln_main"
    android:orientation="vertical"
    android:padding="@dimen/d_10">

    <!--    <ImageView-->
    <!--        android:id="@+id/iv_launcher"-->
    <!--        android:layout_width="@dimen/d_200"-->
    <!--        android:layout_height="@dimen/d_200"-->
    <!--        android:src="@drawable/ic_1" />-->

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/iv_bai1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/bg_lv_pic" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_bai2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/bg_lv_pic" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_bai3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/bg_lv_pic" />

    </TableRow>

    <Button
        android:id="@+id/bt_giai_que"
        android:textSize="20dp"
        android:padding="@dimen/d_10"
        android:layout_marginBottom="40dp"
        android:background="@color/colorAccent"
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giai que"/>

</LinearLayout>
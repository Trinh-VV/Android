<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2136 HÁN TỰ "
        android:textColor="@color/red"
        android:textSize="50dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/bt_n1"
        android:layout_width="250dp"
        android:layout_height="@dimen/d_55"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blue_corner"
        android:text="HÁN TỰ N1"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bt_n2"
        android:layout_width="250dp"
        android:layout_height="@dimen/d_55"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blue_corner"
        android:text="HÁN TỰ N2"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bt_n3"
        android:layout_width="250dp"
        android:layout_height="@dimen/d_55"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blue_corner"
        android:text="HÁN TỰ N3"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bt_n4"
        android:layout_width="250dp"
        android:layout_height="@dimen/d_55"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_blue_corner"
        android:text="HÁN TỰ N4"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bt_n5"
        android:layout_width="250dp"
        android:layout_height="@dimen/d_55"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_blue_corner"
        android:text="HÁN TỰ N5"
        android:textColor="@color/white"
        android:textSize="25dp" />

</LinearLayout>
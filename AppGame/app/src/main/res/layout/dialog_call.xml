<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#1A000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_35"
            android:gravity="center"
            android:text="Tôi nghĩ đáp án là:"
            android:textColor="@color/white"
            android:textSize="@dimen/d_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_help_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="@dimen/d_20"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bt_call_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_10"
            android:background="@drawable/bg_blue_corner_30"
            android:paddingStart="@dimen/d_20"
            android:paddingTop="@dimen/d_10"
            android:paddingEnd="@dimen/d_20"
            android:paddingBottom="@dimen/d_10"
            android:text="Thanks you!"
            android:textColor="@color/white" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="@dimen/d_60"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="@dimen/d_40">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_call_billgate" />
    </androidx.cardview.widget.CardView>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#1A000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/d_250"
        android:layout_height="@dimen/d_200"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tittle_dialog_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cảm ơn bạn đã tham gia chương trình!"
            android:textColor="@color/white"
            android:textSize="@dimen/d_20"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_savescore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_25"
            android:layout_marginTop="@dimen/d_10"
            android:layout_marginEnd="@dimen/d_25"
            android:gravity="center"
            android:hint="Nhập tên lưu điểm"
            android:textColor="@color/black"
            android:textSize="@dimen/d_20" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10"
            android:gravity="center"
            android:padding="@dimen/d_10"
            android:weightSum="2">

            <Button
                android:id="@+id/bt_save_score"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_corner"
                android:text="Lưu"
                android:textColor="@color/white"
                android:textSize="@dimen/d_15" />

            <Button
                android:id="@+id/bt_getout"
                android:layout_width="@dimen/d_100"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/d_10"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_corner"
                android:text="Thoát"
                android:textColor="@color/white"
                android:textSize="@dimen/d_15" />
        </TableRow>


    </LinearLayout>


</FrameLayout>